{% extends 'base.html.twig' %}

{% block body %}
{% if error is not empty %}
<p class="flash flash--error">{{ error.message }}</p>
{% endif %}

<form class="form" action="{{ path('app_security_logincheck') }}" method="POST">
    <label class="form__label" for="username">
        {{ 'security.field.username' | trans }}
    </label>
    <input class="form__input" type="text" name="username" id="username" />
    
    <label class="form__label" for="password">
        {{ 'security.field.password' | trans }}
    </label>
    <input class="form__input" type="password" name="password" id="password" />
    
    <button class="form__input form__input--submit" type="submit">
        {{ 'security.action.logIn' | trans }}
    </button>
</form>
{% endblock %}
