{% extends 'base.html.twig' %}

{% block title %}
{{ 'worker.index.title' | trans }} - {{ parent() }}
{% endblock %}

{% block body %}
<a class="worker__link" href="{{ path('app_worker_create') }}">
    {{ 'worker.action.create' | trans }}
</a>
<table>
    <thead>
        <tr>
            <th>{{ 'worker.field.lastName' | trans }}</th>
            <th>{{ 'worker.field.firstName' | trans }}</th>
            <th colspan="2">{{ 'worker.field.jobTitle' | trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for worker in workers %}
        <tr>
            <td>{{ worker.lastName }}</td>
            <td>{{ worker.firstName }}</td>
            <td>
                {{ "worker.field.jobTitleChoices.#{worker.jobTitle}" | trans }}
            </td>
            <td>
                <a class="worker__link" href="{{ path('app_worker_edit', {id: worker.id}) }}">
                    {{ 'worker.action.edit' | trans }}
                </a>
                <a class="worker__link" href="{{ path('app_worker_delete', {id: worker.id}) }}">
                    {{ 'worker.action.delete' | trans }}
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/worker.css') }}" />
{% endblock %}
